{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.spec.ts",
    "./src/**/*.d.ts",
    "./types.d.ts"
  ],
  "exclude": ["./node_modules"]
}
